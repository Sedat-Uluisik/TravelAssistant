<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/profile_details_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/cancel_username_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/close_purple_32"
                        android:visibility="gone"/>

                    <EditText
                        android:id="@+id/username_profile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:background="@drawable/custom_alert_background"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:drawableStart="@drawable/person_24"
                        android:paddingStart="10dp"
                        android:paddingEnd="7dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:hint="@string/username"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:alpha="0.9"/>

                    <ImageView
                        android:id="@+id/update_btn_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/update_32"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mail_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/cancel_email_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/close_purple_32"
                        android:visibility="gone"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/mail_current_profile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="7dp"
                            android:background="@drawable/custom_alert_background"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/white"
                            android:drawableStart="@drawable/email_24"
                            android:paddingStart="10dp"
                            android:paddingEnd="7dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:hint="@string/e_mail"
                            android:enabled="false"
                            android:alpha="0.9"/>

                        <EditText
                            android:id="@+id/mail_profile_new"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="7dp"
                            android:background="@drawable/custom_alert_background"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/white"
                            android:drawableStart="@drawable/email_24"
                            android:paddingStart="10dp"
                            android:paddingEnd="7dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:visibility="gone"
                            android:hint="@string/new_email"
                            android:enabled="false"/>

                        <EditText
                            android:id="@+id/pass_profile_for_update_mail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="7dp"
                            android:background="@drawable/custom_alert_background"
                            android:textColor="@android:color/white"
                            android:textColorHint="@android:color/white"
                            android:drawableStart="@drawable/lock_24"
                            android:paddingStart="10dp"
                            android:paddingEnd="7dp"
                            android:paddingTop="7dp"
                            android:paddingBottom="7dp"
                            android:hint="@string/password"
                            android:visibility="gone"
                            android:enabled="false"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/update_btn_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/update_32"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/password_layout_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/cancel_password_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/close_purple_32"
                        android:visibility="gone"/>

                    <EditText
                        android:id="@+id/pass_profile"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="7dp"
                        android:background="@drawable/custom_alert_background"
                        android:textColor="@android:color/white"
                        android:textColorHint="@android:color/white"
                        android:drawableStart="@drawable/lock_24"
                        android:paddingStart="10dp"
                        android:paddingEnd="7dp"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:hint="@string/password"
                        android:layout_weight="1"
                        android:enabled="false"
                        android:alpha="0.9"/>

                    <ImageView
                        android:id="@+id/update_btn_password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/update_32"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/logout_btn_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/logout"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:padding="5dp"
                        android:layout_margin="7dp"
                        android:textAllCaps="false"
                        android:background="@drawable/custom_alert_background" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/login_or_register_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="17sp"
                android:padding="5dp"
                android:layout_margin="7dp"
                android:background="@drawable/custom_alert_background"
                android:layout_gravity="center"
                android:visibility="gone"
                android:text="@string/login"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>